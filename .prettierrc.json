{
  "trailingComma": "all",
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "endOfLine": "auto",
  "arrowParens": "avoid",
  "importOrder": [
    "^react$",
    "<THIRD_PARTY_MODULES>",
    "^@innoscripta/(.*)$",
    "^@storybook/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
